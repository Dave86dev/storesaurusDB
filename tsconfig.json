{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2021",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "types": ["node"],
    "lib": ["es2021"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "strict": true
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}
